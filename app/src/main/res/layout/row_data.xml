<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="1dp">

            <TextView
                android:id="@+id/tvMemberId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Member Id"
                android:textColor="@color/blue" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="1dp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Name"
                android:textColor="@color/blue"
                android:visibility="visible" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@drawable/img_placeholder"
                android:visibility="visible" />
            <TextView
                android:id="@+id/tvSelectImage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click here to select Image"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:visibility="visible"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="2dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="1dp">

            <TextView
                android:id="@+id/tvSelectImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Please click above to select document image"
                android:textColor="@color/blue"
                android:visibility="visible" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/llDocumentType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/llDocumentTypeList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="1dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="1dp">

                        <TextView
                            android:id="@+id/tvAadharF"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingHorizontal="1dp"
                            android:text="Aadhar Front"
                            android:textColor="@color/blue" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="1dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="1dp">

                        <TextView
                            android:id="@+id/tvAadharB"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingHorizontal="1dp"
                            android:text="Aadhar Back"
                            android:textColor="@color/blue" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="1dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="1dp">

                        <TextView
                            android:id="@+id/tvPanF"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingHorizontal="1dp"
                            android:text="PAN Front"
                            android:textColor="@color/blue" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="1dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="1dp">

                        <TextView
                            android:id="@+id/tvPanB"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="PAN Back"
                            android:paddingHorizontal="1dp"
                            android:textColor="@color/blue" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="1dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="1dp">

                        <TextView
                            android:id="@+id/tvCancelledCheque"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingHorizontal="1dp"
                            android:text="Cancelled Cheque"
                            android:textColor="@color/blue" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="1dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="1dp">

                        <TextView
                            android:id="@+id/tvPhoto"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingHorizontal="1dp"
                            android:text="Photo"
                            android:textColor="@color/blue" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="1dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="1dp">

                        <TextView
                            android:id="@+id/tvAgreement"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingHorizontal="1dp"
                            android:text="Agreement"
                            android:textColor="@color/blue" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvSelectedDocument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="1dp"
                android:visibility="visible"
                app:cardCornerRadius="5dp"
                app:cardElevation="1dp">

                <TextView
                    android:id="@+id/tvSelectedDocument"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingHorizontal="1dp"
                    android:text=""
                    android:textColor="@color/blue" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="1dp">

                <TextView
                    android:id="@+id/tvSelectDocumentType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Please select the type of document from above options"
                    android:textColor="@color/blue"
                    android:visibility="gone" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <!--        <View-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="1dp"-->
        <!--            android:background="@color/white"-->
        <!--            android:layout_marginBottom="10dp"/>-->
    </LinearLayout>
</layout>